<mvc:View
    xmlns:f="sap.f"
    controllerName="ns.visits.controller.Booklist"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Panel class="myPanel">
        <headerToolbar>
            <Toolbar
                id="idToolbar"
                width="100%"
            >
                <Title
                    id="idVisitListTitle"
                    text="Visit List"
                />
                <ToolbarSpacer />
                <Button
                    text="New Visit"
                    press="onCreateVisitPress"
                    type="Emphasized"
                />

                <SearchField
                    id="idSearchField"
                    width="50%"
                    search=".onSearchFieldSearch"
                    ariaLabelledBy="searchFieldLabel"
                    ariaDescribedBy="searchFieldDescription"
                    placeholder="{i18n>searchFieldPlaceHolder}"
                />
                <MenuButton
                    text="Menu"
                    icon="sap-icon://menu"
                >
                    <menu>
                        <Menu>
                            <MenuItem
                                text="Home"
                                icon="sap-icon://home"
                                press="onNavToLaunchpad"
                            />
                            <MenuItem
                                text="Visitors"
                                icon="sap-icon://customer"
                                press="onNavToVisitors"
                            />
                            <MenuItem
                                text="Settings"
                                icon="sap-icon://action-settings"
                                press="onNavToSettings"
                            />
                            <MenuItem
                                text="Exit"
                                icon="sap-icon://decline"
                            />
                        </Menu>
                    </menu>
                </MenuButton>
            </Toolbar>
        </headerToolbar>

        <IconTabBar
            id="idIconTabBar"
            select=".onIconTabBarSelect"
        >
            <items>
                <IconTabFilter
                    key="All"
                    text="All Visits"
                />
                <IconTabFilter
                    key="Completed"
                    text="Completed Visits"
                />
            </items>
        </IconTabBar>
        <ScrollContainer height="500px" width="100%" vertical="true">
        <Table
            id="idVisitsTable"
            width="100%"
            items="{/Visits}"
            class="SapUiResponsiveMargin, sapUiResponsiveContentPadding"
        >
            <columns>
                <Column>
                    <Text text="{i18n>ColumnIdText}" />
                </Column>

                <Column>
                    <Text text="{i18n>VisitDateText}" />
                </Column>
                <Column>
                    <Text text="{i18n>statusText}" />
                </Column>
                <Column>
                    <Text text="{i18n>contactText}" />
                </Column>
                <Column>
                    <Text text="{i18n>purposeText}" />
                </Column>
                <Column>
                    <Text text="{i18n>locationText}" />
                </Column>
                <Column>
                    <Text text="{i18n>descriptionText}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    type="Navigation"
                    press="onColumnListItemPress"
                >
                    <cells>
                        <Text text="{ID}" />
                        <Text text="{visitDate}" />
                        <Text text="{statusName}" />
                        <Text text="{contact}" />
                        <Text text="{purpose}" />
                        <Text text="{locationName}" />
                        <Text text="{description}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
       </ScrollContainer> 
    </Panel>
</mvc:View>