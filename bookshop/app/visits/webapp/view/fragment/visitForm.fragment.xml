<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="createVisitDialog"
        title="Create New Visit">
        <content>
            <VBox>
                <Label text="ID" />
                <Input id="id" />
                
                <Label text="Visit Date" />
                <DateTimePicker id="visitDate" />
                
                <Label text="Status" />
                <Select id="status" items="{/Status}">
                    <core:Item key="{ID}" text="{name}" />
                </Select>
                
                <Label text="Contact" />
                <Input id="contact" />
                
                <Label text="Purpose" />
                <Input id="purpose" />
                
                <Label text="Location" />
                <Select id="location" items="{/Location}">
                    <core:Item key="{ID}" text="{name}" />
                </Select>
                
                <Label text="Description" />
                <TextArea id="description" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Create" press="onCreateVisit" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>