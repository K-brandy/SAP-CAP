<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="createVisitDialog"
        title="Create New Visit">
        <content>
            <VBox class="sapUiMediumMarginBeginEnd">
                <Label text="ID" required="true"/>
                <Input id="id" />
                
                <Label text="Visit Date" required="true"/>
                <DateTimePicker id="visitDate" />
                
                <Label text="Status"/>
                <Select id="status" items="{/Status}" >
                    <core:Item key="{ID}" text="{name}"/>
                </Select>
                
                <Label text="Contact" required="true"/>
                <Input id="contact" />
                
                <Label text="Purpose" required="true"/>
                <Input id="purpose"/>
                
                <Label text="Location"/>
                <Select id="location" items="{/Location}">
                    <core:Item key="{ID}" text="{name}" />
                </Select>
                
                <Label text="Description" required="true"/>
                <TextArea id="description"  />
                 <Label text="Spaces" />
                <Select id="spaces" items="{/Spaces}" >
                    <core:Item key="{ID}" text="{name}" />
                </Select>
            </VBox>
        </content>
        <beginButton>
            <Button text="Create" press="onCreateVisit" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>